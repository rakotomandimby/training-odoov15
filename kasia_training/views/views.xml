<odoo>
  <data>

    <record model="ir.ui.view" id="ship_list_tree">
      <field name="name">Ship list</field> 
      <field name="model">kasia_training.ship</field> <!-- valeur de  Ship._name  -->
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="type"/>
          <field name="buildDate"/>
          <field name="length"/>
          <field name="about"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="owner_list_tree">
      <field name="name">Owner list</field> 
      <field name="model">kasia_training.owner</field> <!-- valeur de  Owner._name  -->
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="sex"/>
          <field name="birthDate"/>
          <field name="about"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="visit_list_tree">
      <field name="name">Visit list</field> 
      <field name="model">kasia_training.visit</field> <!-- valeur de  Visit._name  -->
      <field name="arch" type="xml">
        <tree>
          <field name="type"/>
          <field name="occurDate"/>
          <field name="endValidityDate"/>
          <field name="about"/>
        </tree>
      </field>
    </record>

    
    <record model="ir.ui.view" id="ship_form" >
      <field name="name">Ship Form</field>
      <field name="model">kasia_training.ship</field> <!-- valeur de  Ship._name  --> 
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="type"/>
              </group>
              <group>
                <field name="buildDate"/>
                <field name="length"/>
              </group>
            </group>
            <notebook>
              <page string="About">
                <field name="about"  />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="owner_form" >
      <field name="name">Owner Form</field>
      <field name="model">kasia_training.owner</field> <!-- valeur de  Owner._name  --> 
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="sex"/>
              </group>
              <group>
                <field name="birthDate"/>
              </group>
            </group>
            <notebook>
              <page string="About">
                <field name="about"  />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="visit_form" >
      <field name="name">Visit Form</field>
      <field name="model">kasia_training.visit</field> <!-- valeur de  Visit._name  --> 
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <group>
                <field name="type"/>
              </group>
              <group>
                <field name="occurDate"/>
                <field name="endValidityDate"/>
              </group>
            </group>
            <notebook>
              <page string="About">
                <field name="about"  />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="kasia_training.ship_list_action">
      <field name="name">Ship List Action</field> <!-- Titre de la page de listing  -->
      <field name="res_model">kasia_training.ship</field> <!-- valeur de  Ship._name  --> 
      <field name="view_mode">tree,form</field>     
    </record>
    <record model="ir.actions.act_window" id="kasia_training.owner_list_action">
      <field name="name">Owner List Action</field> <!-- Titre de la page de listing  -->
      <field name="res_model">kasia_training.owner</field> <!-- valeur de  Ship._name  --> 
      <field name="view_mode">tree,form</field>     
    </record>
    <record model="ir.actions.act_window" id="kasia_training.visit_list_action">
      <field name="name">Visit List Action</field> <!-- Titre de la page de listing  -->
      <field name="res_model">kasia_training.visit</field> <!-- valeur de  Visit._name  --> 
      <field name="view_mode">tree,form</field>     
    </record>


    <!-- Top menu item -->
    <!-- menu categories -->

    <!-- Il faut mettre un top menu : obligatoire                     -->
    <menuitem
        name="APMF"
        id="apmf_menu_root"
         />
    <!-- menu categories -->
    <!-- actions -->
    <menuitem name="Ship List"
              id="ship_menu_list"
              parent="apmf_menu_root"
              action="kasia_training.ship_list_action"/>
    <menuitem name="Owner List"
              id="owner_menu_list"
              parent="apmf_menu_root"
              action="kasia_training.owner_list_action"/>
    <menuitem name="Visit List"
              id="visit_menu_list"
              parent="apmf_menu_root"
              action="kasia_training.visit_list_action"/>

  </data>
</odoo>
